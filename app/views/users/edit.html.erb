<div class="container">

  <h2>User info</h2>
  
  <%= form_for(@user) do |f| %>
    <%= render 'layouts/error_messages', model: @user %>
    
    <div class="row field">
      <label>Name</label>
      <%= f.text_field :name %>
    </div>
  
    <div class="row field">
      <label>Image</label><br>
      <%= f.attachment_field :profile_image %>
    </div>
  
    <div class="row field">
      <label>Introduction</label>
      <%= f.text_area :introduction %>
    </div>
  
    <div class="row field">
      <%= f.submit 'Update User' %>
    </div>
  <% end %>
</div>
