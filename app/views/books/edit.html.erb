<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h1>Editing Book</h1>
      <%= form_for(@book) do |f| %>
      <%= render 'layouts/error_messages', model: @book %>

        <div class="field row">
          <label>Title</label><br>
          <%= f.text_field :title, class: "col-xs-12" %>
        </div>

        <div class="field row">
          <label>Opinion</label><br>
          <%= f.text_field :body, class: "col-xs-12" %>
        </div>

        <div class="field row">
          <%= f.submit 'Update Book', class: "btn btn-primary col-xs-12" %>
        </div>

        <%= link_to 'Show', book_path(@book) %> |
        <%= link_to 'Back', books_path %>

      <% end %>
    </div>
  </div>
</div>




