<div class="container">

  <div class= "row">
    <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>

    <div class= "col-xs-3">
      <%= render 'users/user_profile', user: @user %>
      <%= render 'books/newbook', book: @book %>
    </div>

    <div class= "col-xs-9">
      <h2>Book detail</h2>

      <table class="table">
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@user) do %>
                <%= attachment_image_tag @savebook.user, :profile_image, format: 'jpeg', fallback: "no_image.jpeg", size: "40x40" %><br>
                <%= @user.name %>
              <% end %>
            </td>
            <td><%= @savebook.title %></td>
            <td><%= @savebook.body %></td>

            <% if @user.id === current_user.id %>
              <td><%= link_to 'Edit', edit_book_path, class: "btn-sm btn-success" %></td>
              <td><%= link_to 'Destroy', book_path(@savebook), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn-sm btn-danger" %></td>
            <% end %>
          </tr>
        </tbody>
      </table>

    </div>
  </div>
</div>









